<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Control (KoTH)" />

    <Button
        android:id="@+id/button_assault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assault (2CP)" />

    <Button
        android:id="@+id/button_escort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escort (Payload)" />

    <Button
        android:id="@+id/button_hybrid_assault_escort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assault/Escort (Hybrid)" />
</LinearLayout>