<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_map_tip_group"
    android:background="@drawable/btn_dropdown_blank"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/arrow_map_tip_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/button_padding"
        android:background="@drawable/ic_down_arrow" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/text_list_map_tip_group"
        android:textSize="@dimen/button_text_size_large"
        android:textColor="@color/textTeal"

        android:shadowColor="@color/textDark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="20"
        android:gravity="center"
        android:textAlignment="gravity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </TextView>

</LinearLayout>