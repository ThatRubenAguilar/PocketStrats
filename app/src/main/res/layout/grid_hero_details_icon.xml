<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/icon_list_hero_details"
        android:textSize="@dimen/button_text_size_large"
        android:textColor="@color/textTeal"

        android:shadowColor="@color/textDark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="20"
        android:gravity="center"
        android:textAlignment="gravity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TextView>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/icon_list_hero_name"
        android:textSize="@dimen/button_text_size_small"
        android:textColor="@color/textLight"

        android:shadowColor="@color/textDark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="20"
        android:gravity="center"
        android:textAlignment="gravity"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

</LinearLayout>